{
  "manifest_version": 3,
  "name": "Login Automático NoxTools",
  "version": "1.0",
  "description": "Faz login automático no NoxTools e redireciona para a página Envato.",
  "permissions": ["storage"],
  "host_permissions": [
    "https://noxtools.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Configurar Login"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://noxtools.com/secure/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
